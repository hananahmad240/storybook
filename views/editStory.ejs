<h3>Edit Story</h3>
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <form action="/stories/<%= story._id%>" method="POST">
                    <input type="hidden" name="_method" value="PUT">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" name="title" id="" class="form-control" required value="<%=story.title%>">
                    </div>

                    <div class="form-group">
                        <label for="title">Status</label>
                        <select name="status" id="status" class="form-control">

                            <% if(story.status == "public"){ %>
                            <option value="public" selected>Public</option>
                            <option value="private">Private</option>
                            <% }else{ %>
                            <option value="public">Public</option>
                            <option value="private" selected>Private</option>
                            <% } %>

                        </select>
                    </div>

                    <div class="form-group">
                        <label for="title">Tell Us Your Story</label>
                        <textarea name="body" id="body" class="form-control" required>
                            <%=story.body%>
                        </textarea>
                    </div>

                    <input type="submit" value="Save" class="btn btn-block btn-primary">
                    <a href="/dashboard" class="btn btn-success btn-block">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>